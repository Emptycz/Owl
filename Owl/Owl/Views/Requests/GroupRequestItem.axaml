<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:models="clr-namespace:Owl.ViewModels.Models"
             xmlns:requests="clr-namespace:Owl.Views.Requests"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Owl.Views.Requests.GroupRequestItem"
             x:DataType="models:GroupRequestVm">
        <Expander>
            <Expander.Header>
                <StackPanel Orientation="Horizontal">
                    <TextBlock>DIR</TextBlock>
                    <TextBlock Text="{Binding Name}" />
                </StackPanel>
            </Expander.Header>
            <ItemsRepeater ItemsSource="{Binding Children}">
                <ItemsRepeater.ItemTemplate>
                    <DataTemplate>
                        <requests:IRequestItem Request="{Binding}" />
                    </DataTemplate>
                </ItemsRepeater.ItemTemplate>
            </ItemsRepeater>
        </Expander>
</UserControl>
